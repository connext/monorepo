// This file contains shared TypeScript compilerOptions for *browser* packages.
// The tsconfig.json file in a package may extend this file.

{
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "module": "esnext",
    "types": ["mocha", "chai"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react"
  }
}
