{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declarationDir": "dist/",
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": false,
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/*.ts", "src/**/*.ts"]
}
