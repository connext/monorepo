{
  "version": "0.0.1",
  "name": "@connext/nxtp-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare:goerli": "mustache config/goerli.json subgraph.template.yaml > subgraph.yaml",
    "prepare:rinkeby": "mustache config/rinkeby.json subgraph.template.yaml > subgraph.yaml",
    "deploy:goerli": "yarn prepare:goerli && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ connext/nxtp-goerli",
    "deploy:rinkeby": "yarn prepare:rinkeby && graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ connext/nxtp-rinkeby",
    "create-local": "graph create --node http://localhost:8020/ connext/nxtp",
    "remove-local": "graph remove --node http://localhost:8020/ connext/nxtp",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 connext/nxtp"
  },
  "files": [
    "schema.graphql",
    "generated"
  ],
  "dependencies": {
    "ethers": "^5.3.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "0.20.1",
    "@graphprotocol/graph-ts": "0.20.0",
    "sinon": "^11.1.1"
  },
  "resolutions": {
    "assemblyscript": "git+https://github.com/AssemblyScript/assemblyscript.git#v0.6"
  }
}
