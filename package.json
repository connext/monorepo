{
  "name": "@connext/nxtp",
  "private": true,
  "devDependencies": {
    "@jtbennett/ts-project-scripts": "^1.0.0-rc.4",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.4"
  },
  "workspaces": [
    "packages/contracts",
    "packages/router",
    "packages/sdk",
    "packages/test-ui",
    "packages/txservice",
    "packages/utils"
  ],
  "scripts": {
    "lint:all": "yarn workspaces foreach run lint",
    "test:all": "yarn build:all && yarn workspaces foreach run test",
    "clean:all": "yarn workspaces foreach run clean",
    "build:all": "yarn workspaces foreach run build",
    "verify:all": "yarn test:all && yarn clean:all && yarn build:all && yarn lint:all --max-warnings 0",
    "version:all": "yarn workspaces foreach version $0 && git commit -am \"v$0\" && git tag -a \"v$0\" -m \"v$0\"",
    "purge:all": "yarn workspaces foreach run purge && rimraf './node_modules'",
    "tsp:root": "tsp",
    "tsp": "tsp"
  },
  "resolutions": {
    "assemblyscript": "git+https://github.com/AssemblyScript/assemblyscript.git#v0.6",
    "@nomiclabs/hardhat-ethers": "https://registry.npmjs.org/hardhat-deploy-ethers/-/hardhat-deploy-ethers-0.3.0-beta.10.tgz"
  }
}
