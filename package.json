{
  "name": "mono",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0",
    "tsdx": "^0.14.1",
    "typescript": "^4.3.4"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "watch": "lerna run watch --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
