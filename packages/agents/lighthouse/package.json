{
  "name": "@connext/nxtp-lighthouse",
  "version": "0.2.0-alpha.9",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "dev": "concurrently -i -k -n 'app,tsc' -c 'green,cyan' 'nodemon'",
    "start": "node --enable-source-maps dist/index.js'",
    "lint": "eslint ./src --ext .ts --env node",
    "test:run": "nyc ts-mocha --require 'test/mock.ts' --check-leaks --exit --timeout 60000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)"
  },
  "nodemonConfig": {
    "exec": "node --enable-source-maps ./dist/index.js | pino-pretty",
    "delay": "500",
    "ext": "js,json",
    "watch": [
      ".env",
      "./dist",
      "../@connext/nxtp-txservice/dist",
      "../@connext/nxtp-utils/dist"
    ]
  },
  "eslintIgnore": [
    "graphqlsdk.ts"
  ],
  "author": "Connext",
  "license": "ISC",
  "dependencies": {
    "@connext/nxtp-txservice": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "@sinclair/typebox": "0.23.5",
    "axios": "0.27.2",
    "dotenv": "16.0.1",
    "ethers": "5.6.6",
    "fastify": "3.29.0",
    "graphql": "16.5.0",
    "prom-client": "14.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@types/mocha": "9.1.1",
    "@types/sinon": "10.0.11",
    "concurrently": "7.2.0",
    "eslint": "8.15.0",
    "interval-promise": "1.4.0",
    "mocha": "10.0.0",
    "nodemon": "2.0.16",
    "nyc": "15.1.0",
    "pino-pretty": "7.6.1",
    "rimraf": "3.0.2",
    "sinon": "14.0.0",
    "ts-mocha": "10.0.0",
    "typescript": "4.6.4"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6",
  "stableVersion": "0.1.25"
}
