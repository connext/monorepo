{
  "name": "@connext/nxtp-contracts",
  "version": "0.2.0-alpha.4",
  "description": "",
  "scripts": {
    "test": "yarn test:hardhat && yarn test:forge",
    "test:hardhat": "hardhat test",
    "test:hardhat:gas-report": "REPORT_GAS=true hardhat test",
    "test:forge": "yarn forge test --gas-report",
    "forge": "forge",
    "forge:install": "forge install",
    "build": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js",
    "whitelist": "ts-node ./src/whitelist.ts",
    "create-router": "ts-node ./src/createRouter.ts",
    "prepublish": "yarn build",
    "export": "hardhat export --export-all ./deployments.json",
    "lint:sol": "solhint --config ./.solhint.json \"contracts/**/*.sol\"",
    "prettier:sol": "prettier --write './contracts/**/*.sol' && prettier --write './contracts_forge/**/*.sol'",
    "lint": "eslint ./src --ext .ts --env node && yarn lint:sol",
    "clean": "hardhat clean && forge clean && rimraf ./dist ./tsconfig.tsBuildInfo ./artifacts ./cache",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./node_modules ./cache ",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "hardhat": "hardhat",
    "size": "hardhat size-contracts"
  },
  "main": "dist/index.js",
  "types": "typechain/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "typechain-types",
    "artifacts",
    "deployments.json",
    "contracts",
    "deploy"
  ],
  "author": "Connext",
  "license": "ISC",
  "devDependencies": {
    "@nomad-xyz/configuration": "^0.1.0-rc.12",
    "@nomad-xyz/sdk": "^2.0.0-rc.7",
    "@nomad-xyz/sdk-bridge": "^1.0.0-rc.7",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@sinclair/typebox": "^0.23.4",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.1",
    "hardhat": "^2.9.1",
    "hardhat-contract-sizer": "^2.5.1",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "sinclair": "^0.2.0",
    "sinon": "^13.0.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@connext/nxtp-utils": "workspace:*",
    "@openzeppelin/hardhat-upgrades": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "adv": "^0.1.5",
    "ajv": "^8.11.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "hardhat-deploy": "^0.11.2",
    "hardhat-gas-reporter": "^1.0.8",
    "typechain": "^8.0.0"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6",
  "stableVersion": "0.1.25"
}
