{
  "name": "@connext/nxtp-integration",
  "version": "0.2.0-beta.23",
  "description": "Integration tests for NXTP",
  "author": "Connext",
  "license": "MIT",
  "scripts": {
    "dev": "exit 0",
    "lint": "eslint ./src --ext .ts --env node",
    "itest": "yarn tsc && node",
    "setup": "./setup.sh",
    "test": "nyc ts-mocha --check-leaks --exit --timeout 300000 'test/local.spec.ts'",
    "test:local": "nyc ts-mocha --check-leaks --exit --timeout 300000 'test/local.spec.ts'",
    "test:live": "nyc ts-mocha --check-leaks --exit --timeout 300000 'test/testnet.spec.ts'",
    "test:all": "nyc ts-mocha --check-leaks --exit --timeout 300000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "docker:sequencer:up": "docker-compose -f ops/sequencer.docker-compose.yml up -d",
    "docker:sequencer:down": "docker-compose -f ops/sequencer.docker-compose.yml down",
    "docker:router:up": "docker-compose -f ops/router.docker-compose.yml up -d",
    "docker:router:down": "docker-compose -f ops/router.docker-compose.yml down",
    "docker:web3signer:up": "docker-compose -f ops/web3signer.docker-compose.yml up -d",
    "docker:web3signer:down": "docker-compose -f ops/web3signer.docker-compose.yml down",
    "docker:services:up": "docker-compose -f ops/sequencer.docker-compose.yml -f ops/web3signer.docker-compose.yml up -d",
    "docker:services:down": "docker-compose -f ops/sequencer.docker-compose.yml -f ops/messaging.docker-compose.yml -f ops/web3signer.docker-compose.yml down",
    "docker:all:up": "yarn docker:services:up && sleep 30 && yarn docker:router:up",
    "docker:all:down": "docker-compose -f ops/sequencer.docker-compose.yml -f ops/messaging.docker-compose.yml -f ops/web3signer.docker-compose.yml -f ops/router.docker-compose.yml down",
    "concurrency:router": "ts-node ./test/load/routerConcurrency.ts",
    "cyclical:router": "ts-node ./test/load/routerCyclical.ts | tee packages/integration/logs.json",
    "concurrency:txservice": "ts-node ./test/load/txserviceConcurrency.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "dependencies": {
    "@connext/cartographer-poller": "workspace:*",
    "@connext/nxtp-adapters-cache": "workspace:*",
    "@connext/nxtp-adapters-subgraph": "workspace:*",
    "@connext/nxtp-adapters-web3signer": "workspace:*",
    "@connext/nxtp-contracts": "workspace:*",
    "@connext/nxtp-relayer": "workspace:*",
    "@connext/nxtp-router": "workspace:*",
    "@connext/nxtp-sdk": "workspace:*",
    "@connext/nxtp-sequencer": "workspace:*",
    "@connext/nxtp-txservice": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "axios": "0.27.2",
    "ethers": "5.7.0",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/chai-as-promised": "7.1.5",
    "@types/chai-subset": "1.3.3",
    "@types/mocha": "9.1.1",
    "@types/pino": "7.0.5",
    "@types/sinon": "10.0.13",
    "chai": "4.3.6",
    "chai-as-promised": "7.1.1",
    "chai-subset": "1.6.0",
    "eslint": "8.23.0",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "p-queue": "6.6.2",
    "pino-pretty": "9.1.0",
    "rimraf": "3.0.2",
    "sinon": "14.0.0",
    "ts-mocha": "10.0.0",
    "tslib": "2.4.0",
    "typescript": "4.8.3"
  }
}
