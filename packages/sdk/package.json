{
  "name": "@connext/nxtp-sdk",
  "version": "0.0.62",
  "description": "Client-side package for interacting with the NXTP protocol for crosschain packages",
  "author": "Connext",
  "license": "MIT",
  "scripts": {
    "dev": "yarn build --watch --preserveWatchOutput",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "nyc ts-mocha --check-leaks --exit --timeout 120000 'test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "codegen": "graphql-codegen"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "eslintIgnore": [
    "graphqlsdk.ts"
  ],
  "dependencies": {
    "@connext/nxtp-contracts": "workspace:*",
    "@connext/nxtp-txservice": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "@sinclair/typebox": "^0.20.4",
    "ajv": "^8.6.2",
    "ajv-formats": "^2.1.1",
    "ethers": "^5.4.6",
    "evt": "^1.10.1",
    "graphql": "^15.5.1",
    "graphql-request": "^3.5.0",
    "graphql-tag": "^2.12.5",
    "pino": "^6.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-graphql-request": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.0.0",
    "@types/pino": "^6.3.11",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^7.32.0",
    "hardhat": "^2.6.2",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-mocha": "^8.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6"
}
